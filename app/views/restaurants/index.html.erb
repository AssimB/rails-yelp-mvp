<br>
<div class="container" style="width: 800px;">
  <h2 class="text-center">All restaurants</h2>
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item "><%= restaurant.name %> </li>
      <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
    <% end %>
  </ul>
  <br>
  <%= link_to "New", new_restaurant_path, class: "btn btn-success"%>
</div>
